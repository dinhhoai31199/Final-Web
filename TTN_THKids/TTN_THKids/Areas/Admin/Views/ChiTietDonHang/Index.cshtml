@model IEnumerable<TTN_THKids.Models.ChiTietDonHang>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách chi tiết đơn hàng</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.DonHang.MaNhanVien)*@
            Mã nhân viên
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.SanPham.MaDMSP)*@
            Mã danh mục sản phẩm
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.SoLuongSanPham)*@
            Số lượng sản phẩm
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.GiaSanPham)*@
            Giá sản phẩm
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.GhiChu)*@
            Ghi chú
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DonHang.MaNhanVien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SanPham.MaDMSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuongSanPham)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaSanPham)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GhiChu)
        </td>
        <td>
            <a href="~/Admin/ChiTietDonHang/Edit/@item.SoHieuDonHang"> Chỉnh sửa |</a>
            <a href="~/Admin/ChiTietDonHang/Details/@item.SoHieuDonHang"> Chi tiết |</a>
            <a href="~/Admin/ChiTietDonHang/Delete/@item.SoHieuDonHang"> Xóa</a>
            @*@Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.SoHieuDonHang }) |
        @Html.ActionLink("Chi tiết", "Details", new { id=item.SoHieuDonHang }) |
        @Html.ActionLink("Xóa", "Delete", new { id=item.SoHieuDonHang })*@
        </td>
    </tr>
}

</table>
