@model IEnumerable<TTN_THKids.Models.KhachHang>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách khách hàng</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.HoTen)*@
            Họ tên khách hàng
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Email)*@
            Email
        </th>
        <th>
            Địa chỉ khách hàng
            @*@Html.DisplayNameFor(model => model.DiaChi)*@
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.SoDienThoai)*@
            Số điện thoại
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.TenDangNhap)*@
            Tên đăng nhập
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.MatKhau)*@
            Mật khẩu
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.NgaySinh)*@
            Ngày sinh
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.GioiTinh)*@
            Giới tính
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.ThoiGianDangKy)*@
            Thời gian đăng kí
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HoTen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoDienThoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenDangNhap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MatKhau)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgaySinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GioiTinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThoiGianDangKy)
        </td>
        <td>
            <a href="~/Admin/KhachHang/Edit/@item.MaKhachHang"> Chỉnh sửa |</a>
            <a href="~/Admin/KhachHang/Details/@item.MaKhachHang"> Chi tiết |</a>
            <a href="~/Admin/KhachHang/Delete/@item.MaKhachHang"> Xóa</a>

            @*@Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.MaKhachHang }) |
        @Html.ActionLink("Chi tiết", "Details", new { id=item.MaKhachHang }) |
        @Html.ActionLink("Xóa", "Delete", new { id=item.MaKhachHang })*@
        </td>
    </tr>
}

</table>
