@model IEnumerable<TTN_THKids.Models.SanPham>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách sản phẩm</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.ChatLieu.TenChatLieu)*@
            Tên chất liệu
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.DanhMucSanPham.MaDanhMuc)*@
            Mã danh mục
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.KichCo.TenKichCo)*@
            Tên kích cỡ
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.ThuongHieu.TenThuongHieu)*@
            Tên thương hiệu
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.TenSanPham)*@
            Tên sản phẩm
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.GiaSanPham)*@
            Giá sản phẩm
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.GiaChietKhau)*@
            Giá chiết khấu
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.SoLuong)*@
            Số lượng
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.LinkAnh)*@
            Ảnh
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.LinkListAnh)*@
            List ảnh
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.ThongTinSP)*@
            Thông tin sản phẩm
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.NgayCapNhat)*@
            Ngày cập nhật
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.SoLuongMua)*@
            Số lượng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ChatLieu.TenChatLieu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DanhMucSanPham.MaDanhMuc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KichCo.TenKichCo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThuongHieu.TenThuongHieu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenSanPham)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaSanPham)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaChietKhau)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LinkAnh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LinkListAnh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThongTinSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayCapNhat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuongMua)
        </td>
        <td>
            <a href="~/Admin/SanPham/Edit/@item.MaSanPham"> Chỉnh sửa |</a>
            <a href="~/Admin/SanPham/Details/@item.MaSanPham"> Chi tiết |</a>
            <a href="~/Admin/SanPham/Delete/@item.MaSanPham"> Xóa</a>

            @*@Html.ActionLink("Sửa", "Edit", new { id=item.MaSanPham }) |
        @Html.ActionLink("Chi tiết", "Details", new { id=item.MaSanPham }) |
        @Html.ActionLink("Xóa", "Delete", new { id=item.MaSanPham })*@
        </td>
    </tr>
}

</table>
